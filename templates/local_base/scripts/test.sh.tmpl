#!/usr/bin/env bash
#  -----------------------------------------------------------------------------
#  Test Script — Test Runner for `{{ .ProjectName }}`
#  -----------------------------------------------------------------------------
#
#  It is intended to ensure consistent test execution across environments.
#
#  Usage:
#    ./scripts/test.sh
#
#  File generated by goboot — do not reuse blindly.
#  -----------------------------------------------------------------------------

set -euo pipefail

run() {
  local -r cmd="$1"
  echo "Running: ${cmd}"
  bash -lc "${cmd}"
  echo "✓ Done: ${cmd}"
  echo ""
}

echo "Starting test run for '{{ .ProjectName }}'..."
echo ""

{{- $tests := index .TaskScripts "base_test" }}
{{- if not $tests }}
echo "No test command is configured. Nothing to do."
exit 0
{{- else }}

run '{{ oneLine (index $tests 0) }}'

echo "Test workflow completed successfully."
exit 0
{{- end }}
