# .editorconfig
# Enforces consistent formatting across editors and IDEs
# for Go projects and supporting toolchains

root = true

# -----------------------------------------------------------------------------
# ğŸ”§ Default settings for all files
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# -----------------------------------------------------------------------------
# ğŸ¹ Go files (use tabs, as per gofmt/goimports)
# -----------------------------------------------------------------------------
[*.go]
indent_style = tab
indent_size = 4

# -----------------------------------------------------------------------------
# ğŸ“„ Markdown â€” readable diffs, preserve trailing spaces
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# -----------------------------------------------------------------------------
# ğŸ”§ Config and data formats
# -----------------------------------------------------------------------------

# YAML (2 spaces, per convention)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# JSON (2 spaces, final newline for tooling)
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true

# TOML (also 2 spaces, used in REUSE and tooling)
[*.toml]
indent_style = space
indent_size = 2
insert_final_newline = true

# .env and related (preserve user formatting)
[*.env]
trim_trailing_whitespace = false
insert_final_newline = true

# -----------------------------------------------------------------------------
# ğŸš Shell scripts
# -----------------------------------------------------------------------------
[*.sh]
insert_final_newline = true

# -----------------------------------------------------------------------------
# ğŸ³ Docker files
# -----------------------------------------------------------------------------
[Dockerfile]
insert_final_newline = true

[*.dockerignore]
trim_trailing_whitespace = false

# -----------------------------------------------------------------------------
# ğŸ›  Makefile (tabs required)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab
trim_trailing_whitespace = true

# -----------------------------------------------------------------------------
# ğŸ›¡ Git and EditorConfig files themselves
# -----------------------------------------------------------------------------
[.editorconfig]
insert_final_newline = true

[*.gitignore]
trim_trailing_whitespace = false

